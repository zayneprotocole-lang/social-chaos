rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the creator/host of the session
    // Assuming 'hostId' or similar field exists, or we check against a known admin list.
    // For this app, we might rely on 'players' array containing the user with 'isHost: true'
    // But checking array containment in rules can be tricky/expensive.
    // A simpler approach for V1 is to ensure the user is a participant.
    
    // BASELINE: Authenticated users can read/write everything (for now, to avoid breaking changes)
    // But we add specific restrictions below.
    
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /sessions/{sessionId} {
      // Anyone authenticated can read sessions (to join)
      allow read: if isAuthenticated();

      // Creation: Authenticated users can create sessions
      allow create: if isAuthenticated();

      // Update: 
      // 1. Must be authenticated
      // 2. Cannot modify if status is 'FINISHED' (Immutable History)
      allow update: if isAuthenticated() 
                    && resource.data.status != 'FINISHED'; // Prevent modifying finished games

      // Subcollection: Players
      match /players/{playerId} {
        allow read, write: if isAuthenticated();
      }
    }
    
    // Dares collection (Static content usually, or admin managed)
    match /dares/{dareId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admin (via Console/Admin SDK) should edit dares for now
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
