rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if user is a participant in the session
    function isParticipant(sessionId) {
      return isAuthenticated() && 
             request.auth.uid in get(/databases/$(database)/documents/sessions/$(sessionId)/players).data.keys();
    }
    
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /sessions/{sessionId} {
      // Anyone authenticated can read sessions (to join/view)
      allow read: if isAuthenticated();

      // Creation: Authenticated users can create sessions
      allow create: if isAuthenticated();

      // Update: 
      // 1. Must be authenticated
      // 2. Cannot modify if status is 'FINISHED' (Immutable History)
      allow update: if isAuthenticated() 
                    && resource.data.status != 'FINISHED';

      // Delete: Only if not finished (prevent deleting history)
      allow delete: if isAuthenticated() 
                    && resource.data.status != 'FINISHED';

      // Subcollection: Players
      match /players/{playerId} {
        // Anyone in the session can read players
        allow read: if isAuthenticated();
        
        // Any authenticated user can add players to a session
        allow create: if isAuthenticated();
        
        // Anyone in the session can update players (unless game is finished)
        allow update: if isAuthenticated()
                      && get(/databases/$(database)/documents/sessions/$(sessionId)).data.status != 'FINISHED';
        
        // Anyone in the session can delete players (unless game is finished)
        allow delete: if isAuthenticated()
                      && get(/databases/$(database)/documents/sessions/$(sessionId)).data.status != 'FINISHED';
      }
    }
    
    // Dares collection (Static content, admin managed)
    match /dares/{dareId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admin (via Console/Admin SDK)
    }

    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
